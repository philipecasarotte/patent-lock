<h1><%= @page.name %></h1>
<%= render :partial => 'sidebar' %>
<div id="with_form_small" class="content_cms">
	<%= @page.body rescue "" %>
</div>
<div id="register">
  <% form_for('contact', :html => {:class => "validate"}) do |f| %>
  	<p>
  		<%= f.label(:name, "Name:") %>
  		<%= f.text_field :name, :class => "required" %>
  	</p>
  	<p>
  		<%= f.label(:email, "Email:") %>
  		<%= f.text_field :email, :class => "required email" %>
  	</p>
  	<p>
  		<%= f.label(:address, "Address:") %>
  		<%= f.text_field :address, :class => "required" %>
  	</p>
  	<p class="textarea fix">
  		<%= f.label(:message, "Message:") %>
  		<%= f.text_area :message, :class => "required" %>
  	</p>
    
    <%= submit_tag(t(:submit), :class => "replacement submit contact") %>
  <% end %>
</div>

<%= javascript "plugins/metadata", "plugins/validate" %>